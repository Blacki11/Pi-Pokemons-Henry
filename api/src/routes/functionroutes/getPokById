const axios = require("axios");
const http = require("http");
const { Pokemon, Type } = require("../../db.js");
const { copyFunction } = require("./shareFunction/copyFunction.js");

const URL = "https://pokeapi.co/api/v2/pokemon/";

async function getPokById(req, res) {
  try {
    console.log(req.params);
    const { id } = req.params;
    if (id > 151)
      res
        .status(302)
        .send(
          "Actualmente solo estamos haciendo uso de la 1ra generacion Pokemon(151)"
        );
    else if (isNaN(id)) {
      const pokemoncreate = await Pokemon.findOne({
        where: { id: id },
        include: {
          model: Type,
          attributes: ["name"],
          through: {
            types: [],
          },
        },
      });
      res.status(200).json(pokemoncreate);
    } else {
      const response = await axios.get(URL + id);
      const newPokemon = copyFunction(response);
      res.status(200).json(newPokemon);
    }
  } catch (error) {
    console.log(error.message);
    res.status(500).send("La id introducida no es valida");
  }
}

module.exports = {
  getPokById,
};
